<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8DFDF"
    tools:context=".Mod1Task8Activity">

    <Button
        android:id="@+id/button_set_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Setează"
        android:onClick="setDate"/>

    <TextView
        android:id="@+id/text_set_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Setează data în calendar"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#300202"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_set_date"
        android:layout_marginTop="20dp"
        android:text="Rezultatul este:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4A0303"/>

</RelativeLayout>
